Sub ConvertFootnotes()
'
' ConvertFootnotes Macro
' Find the next footnote reference, convert to non-superscript, and add period after.
' Not needed if you've created your footnotes with movetofootnote()
'
    Selection.Find.ClearFormatting
    Selection.Find.Replacement.ClearFormatting
    With Selection.Find
        .Text = "^f "
        .Replacement.Text = ""
        .Forward = True
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute
    Selection.Font.Superscript = wdToggle ' remove superscript
    Selection.MoveRight Unit:=wdCharacter, Count:=1
    Selection.MoveLeft Unit:=wdCharacter, Count:=1
    Selection.TypeText Text:="." ' put a period after the number.
End Sub
